{
    "scripts": {
        "start": "ts-node index.ts",
        "fmt": "prettier --list-different --write \"**/*.{js,ts,tsx,md,yml,json}\""
    },
    "dependencies": {
        "@trivago/prettier-plugin-sort-imports": "^3.2.0",
        "@types/node": "^18.0.4",
        "console-table-printer": "^2.11.0",
        "prettier": "^2.7.1",
        "ts-node": "^10.9.1",
        "typescript": "^4.7.4"
    },
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "all",
        "bracketSpacing": false,
        "arrowParens": "always",
        "importOrderSeparation": true,
        "importOrderSortSpecifiers": true,
        "importOrder": [
            "^[^.].+$",
            "external/",
            "^[./]"
        ]
    }
}
